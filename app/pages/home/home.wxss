.p {
  display: block; }

text {
  display: block; }

page {
  text-align: center; }

#header {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: stretch;
  background: url(/images/home/banner.jpg) no-repeat center center;
  background-size: cover;
  height: 100vh; }

#logo {
  order: 0;
  flex-basis: 3.5rem;
  border-bottom: 1px solid #cec4b7;
  color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 100%; }
  #logo .logo {
    align-self: center;
    width: 226.8rpx;
    height: 103.2rpx; }

#banner {
  order: 1;
  flex-grow: 1;
  flex-shrink: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  color: #fff;
  font-size: 1.6rem;
  line-height: 1.217; }
  #banner .content {
    display: flex;
    flex-grow: 3;
    flex-direction: column;
    justify-content: center;
    align-self: center; }
